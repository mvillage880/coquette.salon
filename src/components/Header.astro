---
import { Image } from "@astrojs/image/components";
---

<header
  class="fixed inset-x-0 top-0 z-10 flex h-32 items-center justify-start pl-5 sm:h-40 sm:justify-start"
>
  <nav
    class="hidden w-1/2 sm:block sm:px-6 sm:pr-24 md:px-10 md:pr-28 lg:px-16 lg:pr-36 xl:px-20 xl:pr-40"
  >
    <ul class="flex items-center justify-around text-sm">
      <li>
        <a href="/menu" class="flex flex-col items-center">
          <span class="font-english text-xl">MENU</span>
          <span class="mt-1 font-sans text-xs">メニュー</span>
        </a>
      </li>
      <li>
        <a href="/shop" class="flex flex-col items-center">
          <span class="font-english text-xl">SHOP</span>
          <span class="mt-1 font-sans text-xs">店舗情報</span>
        </a>
      </li>
    </ul>
  </nav>
  <a
    href="/"
    class="flex flex-col items-center transition-opacity duration-[0.4s] sm:absolute sm:inset-x-0 sm:mx-auto sm:w-40 sm:hover:opacity-70"
  >
    <Image
      src={import("@images/logo.png")}
      alt="ロゴ"
      width={400}
      height={280}
      loading="eager"
      class="w-24 sm:w-32"
    />
    <!--p class="ml-2 font-english text-xs sm:ml-0 sm:mt-2 sm:text-base">
      RELAX CAFE
    </p-->
  </a>

  <div
    class="hidden w-1/2 items-center justify-between sm:flex sm:pr-40 md:pr-40 lg:pr-40 xl:pr-40"
  >
    <div class="flex-grow"></div>
    <!--div
    class="fixed inset-x-0 bottom-0 z-10 flex hidden h-16 w-full items-center justify-center"
  -->
    <button
      class="w-10rem group relative mr-5 flex h-12 items-center justify-center border border-current font-english text-sm shadow-black/60 transition-shadow duration-[0.4s] sm:hover:shadow-[8px_8px_0_var(--tw-shadow-color)] lg:h-16 lg:text-base"
    >
      <a
        href="https://beauty.hotpepper.jp/slnH000357592/"
        target="_blank"
        rel="noopener noreferrer">Reserve</a
      >
    </button>
  </div>

  <div
    class="fixed inset-x-0 bottom-0 z-10 flex h-16 w-full items-center justify-end sm:hidden"
  >
    <button
      class="group relative flex h-14 w-1/2 items-center justify-center border-current bg-main font-english text-sm text-white shadow-black/60 transition-shadow duration-[0.4s] sm:hover:shadow-[8px_8px_0_var(--tw-shadow-color)] lg:h-16 lg:text-base"
    >
      <a
        href="https://beauty.hotpepper.jp/slnH000357592/"
        target="_blank"
        rel="noopener noreferrer">Hotpepper Beautyから予約</a
      >
    </button>
  </div>
</header>
